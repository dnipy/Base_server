{
  "name": "base_server",
  "version": "1.0.0",
  "description": "base expressjs server for future projects",
  "main": "src/index.js",
  "repository": "git@github.com:dnipy/Base_server.git",
  "author": "dnipy@protonmail.com",
  "license": "MIT",
  "scripts": {
    "build": "npx tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "nodemon",
    "dev:start": "NODE_ENV=production ts-node src/index.ts",
    "db:pull": "npx primsa pull",
    "redis-run" : "docker run --name RedisBaseServer -d redis",
    "db:migrate_dev": "dotenv -e ./src/env/development/.env.development  npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "docker:kc": "docker run -p 8080:8080 -e KEYCLOAK_USER=admin -e KEYCLOAK_PASSWORD=admin jboss/keycloak",
    "docker:postgresql": "docker run -d --name PostgresqlBaseServer -v pg_data:/var/lib/postgresql/data -e POSTGRES_DB=testdb -e POSTGRES_PASSWORD=testpass1234 -e POSTGRES_USER=postgres -p \"5432:5432\" postgres"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@prisma/client": "5.9.0",
    "@types/express-session": "^1.17.10",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.1",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "morgan": "^1.10.0",
    "redis": "^4.6.13",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/hapi__joi": "^17.1.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.10",
    "nodemon": "^3.0.3",
    "prisma": "5.9.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
